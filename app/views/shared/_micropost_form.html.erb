<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :title, placeholder: "Compose title..." %>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose body..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>